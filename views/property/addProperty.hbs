{{> masterHeader }}
{{> menu }}
	<div class="kt-body kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor kt-grid--stretch" id="kt_body">
		<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

			<div class="kt-container  kt-grid__item kt-grid__item--fluid">
				<div class="row">
					<div class="col-md-8 auto-margin">
						<div class="kt-portlet">
							<div class="kt-portlet__head">
								<div class="kt-portlet__head-label">
									<h3 class="kt-portlet__head-title">
										Property Details
									</h3>
								</div>
							</div>
							<!--begin::Form-->
							<form class="kt-form kt-form--label-right" action="/property/save" method="POST" enctype="multipart/form-data">

								<div class="kt-portlet__body">
									<div class="form-group row">
										<div class="col-lg-3">
											<img src="/theme/media/logos/logo.png" id="showImg" class="img-div">
											<input type="file" name="img" id="img" required="" class="getPicture">
										</div>
										<div class="col-lg-9">
											<div class="col-lg-12">
												<div class="row">
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Name</label>
														<input class="form-control" type="text" value="" name="name" id="name" required="">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Price</label>
														<input class="form-control" type="number" value="" name="price" id="price" required="" min="0">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Area</label>
														<input class="form-control" type="number" value="" name="area" id="area" required="" min="0">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Beds</label>
														<input class="form-control" type="number" value="" name="beds" id="beds" required="" min="0">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Baths</label>
														<input class="form-control" type="number" value="" name="bath" id="bath" required="" min="0">
													</div>
													<div class="col-lg-9">
														<label for="example-text-input" class="col-form-label">Description</label>
														<textarea class="form-control" rows="5" id="description" name="description"></textarea>
													</div>
												</div>
											</div>
										</div>
										
									</div>

								</div>
								<div class="kt-portlet__foot">
									<div class="kt-form__actions">
										<div class="row">
											<div class="col-8">
											</div>
											<div class="col-lg-4 kt-align-right">
												<button type="submit" class="btn btn-success">Submit</button>
												<button type="reset" class="btn btn-secondary">Cancel</button>
											</div>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
{{> footer }}
