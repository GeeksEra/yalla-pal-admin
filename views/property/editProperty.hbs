			<div class="kt-container  kt-grid__item kt-grid__item--fluid">
				<div class="row">
					<div class="col-md-8 auto-margin">
						<div class="kt-portlet">
							<div class="kt-portlet__head">
								<div class="kt-portlet__head-label">
									<h3 class="kt-portlet__head-title">
										Property Details
									</h3>
								</div>
							</div>
							<!--begin::Form-->
							<form class="kt-form kt-form--label-right" action="/property/update" method="POST" enctype="multipart/form-data">

								<div class="kt-portlet__body">
									<div class="form-group row">
										<div class="col-lg-3">
											<img src="/theme/media/property/{{result.img}}" id="showImg" class="img-div">
											<input type="file" name="img" id="img" class="getPicture">
										</div>
										<div class="col-lg-9">
											<div class="col-lg-12">
												<div class="row">
													<input type="hidden" name="id" id="id" value="{{result.id}}">
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Name</label>
														<input class="form-control" type="text" value="{{result.name }}" name="name" id="name" required="">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Price</label>
														<input class="form-control" type="number" value="{{result.price }}" name="price" id="price" required="" min="0">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Area</label>
														<input class="form-control" type="number" value="{{result.area }}" name="area" id="area" required="" min="0">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Beds</label>
														<input class="form-control" type="number" value="{{result.bed }}" name="beds" id="beds" required="" min="0">
													</div>
													<div class="col-lg-3">
														<label for="example-text-input" class="col-form-label">Baths</label>
														<input class="form-control" type="number" value="{{result.bath }}" name="bath" id="bath" required="" min="0">
													</div>
													<div class="col-lg-9">
														<label for="example-text-input" class="col-form-label">Description</label>
														<textarea class="form-control" rows="5" id="description" name="description">{{result.description }}</textarea>
													</div>
												</div>
											</div>
										</div>
										
									</div>

								</div>
								<div class="kt-portlet__foot">
									<div class="kt-form__actions">
										<div class="row">
											<div class="col-8">
											</div>
											<div class="col-lg-4 kt-align-right">
												<button type="submit" class="btn btn-success">Submit</button>
												<button type="reset" class="btn btn-secondary">Cancel</button>
											</div>
										</div>
									</div>
								</div>
							</form>
